{
  "exclude": [
    "node_modules",
    "dist",
    "./stories"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./stories"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
